    void tentarPalavra(char palavra[]){

    char t[10];
    int tam = strlen(palavra);
    int vidas = 5;

    for(int i = 0; i < tam; i++)
    {
        t[i] = '_';
    }

    while(vidas > 0)
    {
        gotoxy(10,13);
        printf("Digite uma letra:  ");
        char tentativa = getchar();
        getchar();
        gotoxy (10,14);

        int achou = 0;

        for(int i = 0; i < tam; i++)
        {
            if(palavra[i] == tentativa)
            {
                t[i] = tentativa;
                achou = 1;
            }
        }

        if(achou == 0){
            vidas--;
        }else if(achou == 1){
        vidas++;}



        printf("%s\n", t);
    }

